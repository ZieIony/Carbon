<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                           xmlns:app="http://schemas.android.com/apk/res-auto"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

    <carbon.widget.RelativeLayout
        android:clickable="true"
        app:carbon_rippleColor="?attr/carbon_rippleColor"
        style="?attr/carbon_cardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <tk.zielony.carbonsamples.applibrary.PicassoView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:carbon_outAnimation="none"/>

        <carbon.widget.TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carbon_toolbarHeight"
            android:layout_below="@+id/image"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:textAppearance="?attr/carbon_textAppearanceTitle"/>
    </carbon.widget.RelativeLayout>
</carbon.widget.FrameLayout>