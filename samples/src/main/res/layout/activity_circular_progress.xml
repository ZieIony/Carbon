<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_debugtoolbar" />

    <carbon.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/carbon_padding">

            <carbon.widget.ProgressView
                android:id="@+id/progress1"
                style="@style/carbon_ProgressView.Circular.Determinate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/carbon_padding" />

            <carbon.widget.Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/carbon_padding"
                android:text="animate" />

            <carbon.widget.ProgressView
                android:id="@+id/progress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/carbon_padding"
                app:carbon_progressStyle="circular_indeterminate" />

            <carbon.widget.Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/carbon_padding"
                android:text="animate" />

            <carbon.widget.ProgressView
                android:id="@+id/progress3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/carbon_padding"
                app:carbon_barWidth="5dp"
                app:carbon_progressStyle="circular_indeterminate"
                app:carbon_tint="#ffff0000" />

            <carbon.widget.Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/carbon_padding"
                android:text="animate" />

            <carbon.widget.RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/carbon_padding">

                <carbon.widget.FloatingActionButton
                    android:layout_width="@dimen/carbon_fabSize"
                    android:layout_height="@dimen/carbon_fabSize"
                    android:layout_centerInParent="true"
                    app:carbon_src="@raw/ic_settings_input_svideo_24px" />

                <carbon.widget.ProgressView
                    android:id="@+id/progress4"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_centerInParent="true"
                    app:carbon_progressStyle="circular_indeterminate" />

            </carbon.widget.RelativeLayout>

            <carbon.widget.Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/carbon_padding"
                android:text="animate" />
        </carbon.widget.LinearLayout>
    </carbon.widget.ScrollView>
</carbon.widget.LinearLayout>