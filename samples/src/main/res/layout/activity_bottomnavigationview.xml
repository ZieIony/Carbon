<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:carbon_insetColor="?attr/colorPrimary">

    <include layout="@layout/view_debugtoolbar" />

    <carbon.widget.Label
        style="@style/sectionDescription"
        android:text="Items can be provided from code as an array of BottomNavigationView.Item objects" />

    <carbon.widget.BottomNavigationView
        android:id="@+id/bottomBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/carbon_margin"
        android:background="?attr/colorPrimary"
        android:orientation="vertical" />

    <carbon.widget.Label
        style="@style/sectionDescription"
        android:text="Provide a custom item's layout easily using carbon_itemLayout attribute and data binding" />

    <carbon.widget.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/carbon_margin"
        app:carbon_itemLayout="@layout/item_bottombar" />

    <carbon.widget.Label
        style="@style/sectionDescription"
        android:text="Default BottomNavigationView with items set using a menu resource" />

    <carbon.widget.BottomNavigationView
        android:id="@+id/bottomBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/carbon_colorBackground"
        app:carbon_elevation="8dp"
        app:carbon_menu="@menu/menu_navigation" />
</carbon.widget.LinearLayout>
