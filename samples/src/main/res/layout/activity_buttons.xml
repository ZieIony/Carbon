<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fitsSystemWindows="true"
                            android:orientation="vertical"
                            app:carbon_insetColor="?attr/colorPrimary">

    <include layout="@layout/view_debugtoolbar"/>

    <carbon.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <carbon.widget.TextView
                style="@style/sectionDescription"
                android:text="Plain buttons with different styles"/>

            <carbon.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/carbon_padding"
                android:tag="enable"
                android:text="Theme style"/>

            <carbon.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/carbon_padding"
                android:background="@drawable/buttonshape"
                android:tag="enable"
                android:text="Shape"
                android:textColor="@color/carbon_text_primary_dark"
                app:carbon_backgroundTint="@null"/>

            <carbon.widget.Button
                style="@style/carbon_Button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="@dimen/carbon_padding"
                android:background="#ffffffff"
                android:paddingBottom="0dp"
                android:paddingLeft="@dimen/carbon_padding"
                android:paddingRight="@dimen/carbon_padding"
                android:paddingTop="0dp"
                android:tag="enable"
                android:text="Inline Style"
                android:textColor="#ff0000ff"
                app:carbon_backgroundTint="@null"
                app:carbon_cornerRadius="2dp"
                app:carbon_elevation="@dimen/carbon_elevationLow"
                app:carbon_rippleColor="#40ff0000"
                app:carbon_touchMarginBottom="6dp"
                app:carbon_touchMarginLeft="100dp"
                app:carbon_touchMarginRight="100dp"
                app:carbon_touchMarginTop="6dp"/>

            <carbon.widget.Button
                style="@style/carbon_Button.Flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/carbon_padding"
                android:tag="enable"
                android:text="flat button"/>

            <carbon.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/carbon_padding"
                android:background="@color/carbon_white"
                android:tag="enable"
                android:text="Rounded with ripple"
                android:textColor="@color/carbon_amber_700"
                app:carbon_cornerRadius="100dp"
                app:carbon_rippleColor="#40ff0000"
                app:carbon_stroke="@color/carbon_amber_700"
                app:carbon_strokeWidth="2dp"/>

            <carbon.widget.Divider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <carbon.widget.TextView
                style="@style/sectionDescription"
                android:text="Floating action buttons with vector graphics and proper sizes"/>

            <carbon.widget.FloatingActionButton
                style="@style/carbon_FloatingActionButton"
                android:layout_margin="@dimen/carbon_padding"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mazda"
                android:tag="enable"
                app:carbon_tint="@null"/>

            <carbon.widget.FloatingActionButton
                style="@style/carbon_FloatingActionButton.Small"
                android:layout_margin="@dimen/carbon_padding"
                android:src="@raw/ic_data_usage_24px"
                android:tag="enable"/>

            <carbon.widget.FloatingActionButton
                android:layout_width="@dimen/carbon_fabSize"
                android:layout_height="@dimen/carbon_fabSize"
                android:layout_margin="@dimen/carbon_padding"
                android:background="?attr/colorPrimary"
                android:padding="@dimen/carbon_padding"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_android_black_24dp"
                android:tag="enable"/>
        </carbon.widget.LinearLayout>
    </carbon.widget.ScrollView>

</carbon.widget.LinearLayout>
