            app:carbon_autoSizeMinTextSize="15sp" />

    </tk.zielony.carbonsamples.feature.ResizeLayout>

    <carbon.widget.TextView
        android:id="@+id/textSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

