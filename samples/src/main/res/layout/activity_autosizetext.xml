            android:id="@+id/autoSizeText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/carbon_grey_800"
            android:text="Apple pie donut fruitcake sugar plum jelly beans topping macaroon biscuit donut. Gingerbread sugar plum gummi bears soufflÃ© brownie powder liquorice."
            android:textColor="@color/carbon_text_primary_dark"
