<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:carbon_insetColor="?attr/colorPrimary">

    <carbon.widget.ProgressBar
        android:id="@+id/progress5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="@dimen/carbon_padding"
        app:carbon_barWidth="5dp"
        app:carbon_progressStyle="bar_indeterminate" />

    <carbon.widget.Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/carbon_padding"
        android:text="animate" />

    <carbon.widget.ProgressBar
        android:id="@+id/progress6"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="@dimen/carbon_padding"
        app:carbon_barWidth="5dp"
        app:carbon_progressStyle="bar_determinate" />

    <carbon.widget.Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/carbon_padding"
        android:text="animate" />

    <carbon.widget.ProgressBar
        android:id="@+id/progress7"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="@dimen/carbon_padding"
        app:carbon_barWidth="5dp"
        app:carbon_progressStyle="bar_query"
        app:carbon_tint="#ffff0000" />

    <carbon.widget.Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/carbon_padding"
        android:text="animate" />
</carbon.widget.LinearLayout>