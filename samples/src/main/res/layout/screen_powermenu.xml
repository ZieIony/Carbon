<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/carbon_padding"
    android:paddingBottom="@dimen/carbon_padding">

    <carbon.widget.LinearLayout
        android:id="@+id/powerOff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_fabSize"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:carbon_rippleColor="?attr/carbon_rippleColor">

        <carbon.widget.FloatingActionButton
            android:id="@+id/powerOffIcon"
            style="@style/carbon_FloatingActionButton.Small"
            android:layout_marginLeft="@dimen/carbon_padding"
            android:layout_marginRight="@dimen/carbon_padding"
            android:background="#D32F2F"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/carbon_paddingHalf"
            app:srcCompat="@drawable/ic_power_settings_new_black_24dp"
            android:tag="animate"
            app:carbon_elevation="0dp"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="none"
            app:carbon_tint="@color/carbon_iconColor_dark" />

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="@dimen/carbon_padding"
            android:tag="animate"
            android:text="Power Off"
            android:textAppearance="?attr/carbon_textAppearanceSubhead"
            app:carbon_inAnimation="fly" />
    </carbon.widget.LinearLayout>

    <carbon.widget.LinearLayout
        android:id="@+id/reboot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_fabSize"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:carbon_rippleColor="?attr/carbon_rippleColor">

        <carbon.widget.FloatingActionButton
            android:id="@+id/rebootIcon"
            style="@style/carbon_FloatingActionButton.Small"
            android:layout_marginLeft="@dimen/carbon_padding"
            android:layout_marginRight="@dimen/carbon_padding"
            android:background="#F8A825"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/carbon_paddingHalf"
            android:src="@raw/ic_refresh_24px"
            android:tag="animate"
            app:carbon_elevation="0dp"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="none"
            app:carbon_tint="@color/carbon_iconColor_dark" />

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="@dimen/carbon_padding"
            android:tag="animate"
            android:text="Reboot"
            android:textAppearance="?attr/carbon_textAppearanceSubhead"
            app:carbon_inAnimation="fly" />
    </carbon.widget.LinearLayout>

    <carbon.widget.LinearLayout
        android:id="@+id/airplaneMode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_fabSize"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:carbon_rippleColor="?attr/carbon_rippleColor">

        <carbon.widget.FloatingActionButton
            android:id="@+id/airplaneModeIcon"
            style="@style/carbon_FloatingActionButton.Small"
            android:layout_marginLeft="@dimen/carbon_padding"
            android:layout_marginRight="@dimen/carbon_padding"
            android:background="#388E3C"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/carbon_paddingHalf"
            android:src="@raw/ic_airplanemode_off_24px"
            android:tag="animate"
            app:carbon_elevation="0dp"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="none"
            app:carbon_tint="@color/carbon_iconColor_dark" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/carbon_fabSize">

            <carbon.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="@dimen/carbon_padding"
                android:singleLine="true"
                android:tag="animate"
                android:text="Airplane Mode"
                android:textAppearance="?attr/carbon_textAppearanceSubhead"
                app:carbon_inAnimation="fly" />

            <carbon.widget.TextView
                android:id="@+id/airplaneModeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginRight="@dimen/carbon_padding"
                android:singleLine="true"
                android:tag="animate"
                android:text="Airplane Mode is off"
                android:textAppearance="?attr/carbon_textAppearanceCaption"
                app:carbon_inAnimation="fly" />
        </FrameLayout>
    </carbon.widget.LinearLayout>

    <carbon.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/carbon_padding"
        android:tag="animate"
        app:carbon_inAnimation="pop" />

    <carbon.widget.LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <carbon.widget.FloatingActionButton
            android:id="@+id/vibration"
            style="@style/carbon_FloatingActionButton.Small"
            android:layout_marginLeft="@dimen/carbon_padding"
            android:layout_marginRight="@dimen/carbon_padding"
            android:background="?attr/carbon_colorBackground"
            android:padding="@dimen/carbon_paddingHalf"
            android:src="@raw/ic_vibration_24px"
            android:tag="animate"
            app:carbon_elevation="0dp"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="none"
            app:carbon_tint="?attr/carbon_iconColor" />

        <carbon.widget.FloatingActionButton
            android:id="@+id/volume"
            style="@style/carbon_FloatingActionButton.Small"
            android:layout_marginRight="@dimen/carbon_padding"
            android:background="?attr/carbon_colorBackgroundInverse"
            android:padding="@dimen/carbon_paddingHalf"
            android:src="@raw/ic_volume_up_24px"
            android:tag="animate"
            app:carbon_elevation="0dp"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="none"
            app:carbon_tint="?attr/carbon_iconColorInverse" />
    </carbon.widget.LinearLayout>
</carbon.widget.LinearLayout>
