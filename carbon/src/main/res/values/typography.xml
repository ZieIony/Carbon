<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="carbon_text_primary_dark">#ffffffff</color>
    <color name="carbon_text_secondary_dark">#b3ffffff</color>
    <color name="carbon_text_hint_dark">#4dffffff</color>
    <color name="carbon_text_disabled_dark">#4dffffff</color>

    <color name="carbon_text_primary_light">#de000000</color>
    <color name="carbon_text_secondary_light">#8a000000</color>
    <color name="carbon_text_hint_light">#61000000</color>
    <color name="carbon_text_disabled_light">#61000000</color>


    <style name="carbon_TextAppearance" parent="@android:style/TextAppearance" />


    <style name="carbon_TextAppearance.Headline">
        <item name="android:textSize">@dimen/carbon_textSizeHeadline</item>
        <item name="carbon_fontFamily">"sans-serif"</item>
    </style>

    <style name="carbon_TextAppearance.Headline.Dark">
        <item name="android:textColor">@color/carbon_text_primary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Headline.Light">
        <item name="android:textColor">@color/carbon_text_primary_light</item>
    </style>


    <style name="carbon_TextAppearance.Title">
        <item name="android:textSize">@dimen/carbon_textSizeTitle</item>
        <item name="carbon_fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="carbon_TextAppearance.Title.Dark">
        <item name="android:textColor">@color/carbon_text_primary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Title.Light">
        <item name="android:textColor">@color/carbon_text_primary_light</item>
    </style>


    <style name="carbon_TextAppearance.Subhead">
        <item name="android:textSize">@dimen/carbon_textSizeSubhead</item>
        <item name="carbon_fontPath">"carbon/Roboto-Regular.ttf"</item>
    </style>

    <style name="carbon_TextAppearance.Subhead.Dark">
        <item name="android:textColor">@color/carbon_text_primary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Subhead.Light">
        <item name="android:textColor">@color/carbon_text_primary_light</item>
    </style>


    <style name="carbon_TextAppearance.Body2">
        <item name="android:textSize">@dimen/carbon_textSizeBody</item>
        <item name="carbon_fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="carbon_TextAppearance.Body2.Dark">
        <item name="android:textColor">@color/carbon_text_primary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Body2.Light">
        <item name="android:textColor">@color/carbon_text_primary_light</item>
    </style>


    <style name="carbon_TextAppearance.Body1">
        <item name="android:textSize">@dimen/carbon_textSizeBody</item>
        <item name="carbon_fontFamily">"sans-serif"</item>
    </style>

    <style name="carbon_TextAppearance.Body1.Dark">
        <item name="android:textColor">@color/carbon_text_primary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Body1.Light">
        <item name="android:textColor">@color/carbon_text_primary_light</item>
    </style>


    <style name="carbon_TextAppearance.Caption">
        <item name="android:textSize">@dimen/carbon_textSizeCaption</item>
        <item name="carbon_fontFamily">"sans-serif"</item>
    </style>

    <style name="carbon_TextAppearance.Caption.Dark">
        <item name="android:textColor">@color/carbon_text_secondary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Caption.Light">
        <item name="android:textColor">@color/carbon_text_secondary_light</item>
    </style>


    <style name="carbon_TextAppearance.Button">
        <item name="android:textSize">@dimen/carbon_textSizeButton</item>
        <item name="carbon_fontFamily">"sans-serif-medium"</item>
        <item name="carbon_textAllCaps">true</item>
    </style>

    <style name="carbon_TextAppearance.Button.Dark">
        <item name="android:textColor">@color/carbon_text_primary_dark</item>
    </style>

    <style name="carbon_TextAppearance.Button.Light">
        <item name="android:textColor">@color/carbon_text_primary_light</item>
    </style>
</resources>